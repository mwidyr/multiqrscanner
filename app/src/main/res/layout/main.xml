<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@color/White"
	android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:orientation="vertical" >


	<Button
		android:id="@+id/btn_qr_code_scanner"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:background="@drawable/round_green"
		android:text="@string/qr_code_scanner"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.442" />

	<Button
		android:id="@+id/btn_barcode_scanner"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:background="@drawable/round_green_dark"
		android:text="QR &amp; Barcode scanner"
		app:layout_constraintEnd_toEndOf="@+id/btn_qr_code_scanner"
		app:layout_constraintStart_toStartOf="@+id/btn_qr_code_scanner"
		app:layout_constraintTop_toBottomOf="@+id/btn_qr_code_scanner" />


</android.support.constraint.ConstraintLayout>

