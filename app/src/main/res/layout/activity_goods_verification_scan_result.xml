<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    tools:context=".inbound.GoodsVerificationScanResultActivity">

    <TextView
        android:id="@+id/tv_goods_verif_result_inbound_no"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Inbound No."
        android:textColor="@color/Black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/table_view_goods_verif_result"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_goods_verif_result_inbound_no_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/Black"
        android:text=":"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goods_verif_result_inbound_no"
        app:layout_constraintStart_toEndOf="@+id/tv_goods_verif_result_inbound_no"
        app:layout_constraintTop_toTopOf="@+id/tv_goods_verif_result_inbound_no" />

    <TextView
        android:id="@+id/tv_goods_verif_result_inbound_no_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text=""
        android:textColor="@color/Black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_goods_verif_result_inbound_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_goods_verif_result_inbound_no_div"
        app:layout_constraintTop_toTopOf="@+id/tv_goods_verif_result_inbound_no" />

    <TextView
        android:id="@+id/tv_goods_verif_scan_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Scan Result"
        android:textColor="@color/Black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.codecrafters.tableview.TableView
        app:tableView_headerColor="@color/MediumSeaGreen"
        android:divider="@color/Black"
        android:dividerHeight="1dip"
        android:id="@+id/table_view_goods_verif_result"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_goods_verif_result_scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_goods_verif_scan_result"
        app:tableView_columnCount="3" />

    <Button
        android:id="@+id/btn_goods_verif_result_scan"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_green_dark"
        android:text="Scan Again"
        android:textColor="@color/WhiteSmoke"
        app:layout_constraintBottom_toTopOf="@+id/iv_goods_verif_scan_result"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_goods_verif_result_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_green"
        android:text="Submit"
        android:textColor="@color/WhiteSmoke"
        app:layout_constraintBottom_toBottomOf="@+id/btn_goods_verif_result_scan"
        app:layout_constraintEnd_toStartOf="@+id/btn_goods_verif_result_scan"
        app:layout_constraintTop_toTopOf="@+id/btn_goods_verif_result_scan" />

    <Button
        android:id="@+id/btn_goods_verif_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_green"
        android:text="Cancel"
        android:textColor="@color/WhiteSmoke"
        app:layout_constraintBottom_toBottomOf="@+id/btn_goods_verif_result_confirm"
        app:layout_constraintEnd_toStartOf="@+id/btn_goods_verif_result_confirm"
        app:layout_constraintTop_toTopOf="@+id/btn_goods_verif_result_confirm" />

    <ImageView
        android:id="@+id/iv_goods_verif_scan_result"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="10"
        android:background="#FFCCCCCC"
        android:textColor="#FF000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993" />

</android.support.constraint.ConstraintLayout>